# Application
AGENT_NAME="EE Research Scout"
ENVIRONMENT=development
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# AI Services
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your_anthropic_key  # Optional

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ee_scout
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

REDIS_URL=redis://localhost:6379/0

# Supply Chain APIs
NEXAR_CLIENT_ID=your_nexar_client_id
NEXAR_CLIENT_SECRET=your_nexar_client_secret

# Research Settings
TARGET_REGIONS=EU,Asia
MAX_PAPER_RESULTS=20
MAX_PATENT_RESULTS=20
MAX_COMPONENT_RESULTS=30

# Performance
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_CIRCUIT_BREAKER=true

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
API_KEY_HEADER=X-API-Key  # Optional API key auth